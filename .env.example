# 应用配置
APP_NAME=Japanese Sentence Analysis API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000

# CORS 配置
# 开发环境可以使用 ["*"] 允许所有源
# 生产环境建议限制为特定域名
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 文件路径配置
GRAMMAR_RULES_FILE=data/grammar_rules.json
VOCABULARY_LEVELS_FILE=data/vocabulary_levels.json

# MeCab 配置
MECAB_DICT_TYPE=ipadic
